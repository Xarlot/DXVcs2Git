<UserControl x:Class="DXVcs2Git.UI.Views.LoadLogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DXVcs2Git.UI.Views"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Padding="10" FocusManager.FocusedElement="{Binding ElementName=editor}" >
    <Grid>
            <dxe:TextEdit x:Name="editor" ValidateOnTextInput="True" EditValue="{Binding Path=Url, UpdateSourceTrigger=PropertyChanged}" Width="400"/>
    </Grid>
</UserControl>
